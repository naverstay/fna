include mixins
doctype html
html(lang='ru' class='page_slider_mod_')
    +dev_head('FNA цены')

    body
        .wrapper.price_bg.inner_page
            .rect_1024
            .base
                a.go_top_btn.goTopBtn(href='#')
                    span.svg-svg-home--fna-svg--up-icon-dims.svg-svg-home--fna-svg--up-icon
                +header()
                .header_menu_holder
                    +header_menu(6, true)

                div.main_content
                    .section_inner
                        .text_center: h1.page_title.color_white_2.mod_1 Стоимость услуг
                        
                        .content_holder
                            .price_block
                                .dt_hidden
                                    select.priceSelect()
                                        option(value='#price_tab_1') Обязательный аудит
                                        option(value='#price_tab_2') Комплексный аудит
                                        option(value='#price_tab_3') Налоговый аудит
                                        option(value='#price_tab_4') Инициативный аудит
                                        option(value='#price_tab_5') Due Diligence
    
                                    #price_menu_dropdown.aside_menu_dropdown
                                .dt_only
                                    ul#price_list.contact_city_filter(data-active-tab=0)
                                        li.radio_emul
                                            a.check_text(href='#price_tab_1')
                                                span Обязательный аудит 
            
                                        li.radio_emul
                                            a.check_text(href='#price_tab_2')
                                                span Комплексный аудит
                                                
                                        li.radio_emul
                                            a.check_text(href='#price_tab_3')
                                                span Налоговый аудит 
            
                                        li.radio_emul
                                            a.check_text(href='#price_tab_4')
                                                span Инициативный аудит 
            
                                        li.radio_emul
                                            a.check_text(href='#price_tab_5')
                                                span Due Diligence
                                
                                .tabBlock(data-tab-context='#price_list')
                                    #price_tab_1
                                        +price_tab()
                                    #price_tab_2
                                        +price_tab(2)
                                    #price_tab_3
                                        +price_tab(3)
                                    #price_tab_4
                                        +price_tab(4)
                                    #price_tab_5
                                        +price_tab(5)
                                
                    .price_order_section
                        .section_inner
                            .price_order_block
                                .price_order_info
                                    .price_order_caption Каждый проект по аудиту — уникален 
                                    p Среди клиентов нет двух одинаковых компаний. Поэтому стоимость наших услуг определяется индивидуально, исходя из ваших целей и объема работ. 
                                    p Посмотрите примерный диапазон цен, среднюю стоимость и результаты эффективности по каждой услуге. Наша гибкость направлена на поиск наиболее оптимального и выгодного решения.
                                    .price_order_caption Узнать стоимость 
                                        span.dt_only <br>
                                        |  аудиторских услуг
                                    p Мы ответим вам быстро. 
                                        span.dt_only <br> 
                                        |  Проверьте нашу оперативность!

                                    .text_center
                                        .price_order_controls: a.callback_phone.black_mod(href='#')
                                            span.callback_icon 
                                                span.svg-svg-contacts--contacts-phone-icon
                                            span +7 495 134-32-23
                                            
                                        .price_order_controls
                                            a.callback_btn.btn_v1.btn_red_black.callbackOpenBtn(href='#') Заказать звонок

                                .price_order_form: form(action='#')
                                    .price_order_row
                                        .form_label: label.mb(for='order_service') Услуга
                                        .input_w.select_v1
                                            select#order_service.select2
                                                option(value=1) Комплексный аудит
                                                option(value=2) Комплексный аудит 2
                                                option(value=3) Комплексный аудит 3
                                                
                                    .price_order_row
                                        .form_label: label.mb(for='order_activity') Деятельность
                                        .input_w.select_v1
                                            input#order_activity.f_input.input_v2()
                                            
                                    .price_order_row.toddler_holder
                                        .form_label: label.mb(for='order_service') Годовая выручка
                                        .input_w.select_v1
                                            .toddler_v1
                                                #annual_revenu.toddler
                                                input.hidden_input#annual_revenu_val
                                    .price_order_row
                                        .form_label: label.mb(for='order_employees') Сотрудников
                                        .input_w
                                            .fl
                                                .form_cell.cell_v2
                                                    .input_w.mb: input#order_employees.f_input.input_v2.text_center(value='10')
                                            
                                            .fr
                                                .form_cell.cell_v2
                                                    .form_label: label.mb(for='order_accountants') из них бухгалтеров
                                                    .input_w.mb: input#order_accountants.f_input.input_v2.text_center(value='2')

                                    .price_order_row
                                        .form_label: label.mb(for='order_email') Эл. почта
                                        .input_w.select_v1
                                            input#order_email.f_input.input_v2()

                                    .price_order_row
                                        .form_label: label.mb(for='order_phone') Телефон
                                        .input_w.select_v1
                                            input#order_phone.f_input.input_v2()
                                                
                                    .price_order_row
                                        .form_label: label.mb(for='order_comment') Комментарий
                                        .input_w.select_v1
                                            textarea#order_comment.f_input.input_v2()
                                    .price_order_row
                                        .form_label &nbsp;
                                        .input_w.select_v1
                                            button.btn_v2.send_order_btn.btn_red Отправить заявку
                                                

        +popups()
        
        +scripts(false,false,false,false,false,false, true)
        